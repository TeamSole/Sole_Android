<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/my_course_write_search_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="장소 이름"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:textColor="@color/black"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/my_course_write_search_result_road_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주소"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/my_course_write_search_result_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/my_course_write_search_result_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="주소"
        android:textSize="10sp"
        android:textColor="#5C5C5C"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="8dp"
        app:layout_constraintTop_toBottomOf="@id/my_course_write_search_result_road_address"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/my_course_write_search_result_address" />

</androidx.constraintlayout.widget.ConstraintLayout>