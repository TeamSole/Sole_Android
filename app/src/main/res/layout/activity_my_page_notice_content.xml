<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_page_notice_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/my_page_notice_back_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back"
            android:padding="10dp"
            android:layout_marginStart="14dp"
            app:tint="#404040"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/my_page_notice_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="쏠 1.0 오픈 안내"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/pretendard_bold"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_notice_top_bar"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/my_page_notice_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2023.00.00"
        android:textSize="14sp"
        android:textColor="#999999"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_notice_title"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/my_page_notice_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#D3D4D5"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_notice_time" />

    <TextView
        android:id="@+id/my_page_notice_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:text="텍스트 영역"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_regular"
        android:scrollbars="vertical"
        android:layout_marginVertical="20dp"
        app:layout_constraintTop_toBottomOf="@id/my_page_notice_line"
        app:layout_constraintBottom_toBottomOf="parent" />
    
</androidx.constraintlayout.widget.ConstraintLayout>