<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_course_write_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/my_course_write_back_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_left"
            android:padding="8dp"
            android:layout_marginStart="14dp"
            app:tint="#404040"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="코스 기록"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_semibold"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@id/my_course_write_back_iv"
            app:layout_constraintBottom_toBottomOf="@id/my_course_write_back_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_course_write_top_bar" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_course_write_course_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:id="@+id/my_course_write_title_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:hint="코스 제목"
                    android:textColorHint="#999999"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/my_course_write_title_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D3D4D5"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_title_et"
                    app:layout_constraintStart_toStartOf="parent" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/my_course_write_course_image_cv"
                    android:layout_width="match_parent"
                    android:layout_height="186dp"
                    android:layout_marginTop="28dp"
                    app:strokeColor="#D3D4D5"
                    app:strokeWidth="1dp"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_title_line">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/my_course_write_course_image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/my_course_write_course_image_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="대표 사진 추가"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_regular"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/my_course_write_course_image_add_iv" />

                        <ImageView
                            android:id="@+id/my_course_write_course_image_add_iv"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_add"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/my_course_write_course_image_tv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/my_course_write_date_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="방문 날짜"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:layout_marginTop="30dp"
                    android:drawableTint="#999999"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_course_image_cv"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/my_course_write_date_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#D3D4D5"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_date_tv" />

                <TextView
                    android:id="@+id/my_course_write_tag_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="태그"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:layout_marginTop="20dp"
                    android:drawableTint="#999999"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_date_line"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/my_course_write_tag_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#D3D4D5"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_tag_tv" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/my_course_write_review_cv"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="28dp"
                    app:cardCornerRadius="4dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#D3D4D5"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_tag_line">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:hint="코스 후기를 작성해 주세요 :)"
                        android:textColorHint="#999999"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:gravity="top|left"
                        android:layout_margin="12dp"
                        android:scrollHorizontally="true" />

                </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/my_course_write_course_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D3D4D5"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/my_course_write_course_layout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_course_write_location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="28dp"
                app:layout_constraintTop_toBottomOf="@id/my_course_write_course_line">

                <TextView
                    android:id="@+id/my_course_write_location_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="장소 입력"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_semibold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/my_course_write_search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="#EFEFF0"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_location_title" >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingVertical="7dp">

                        <ImageView
                            android:id="@+id/my_course_write_search_iv"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_search"
                            android:layout_marginStart="7dp"
                            app:layout_constraintDimensionRatio="1:1"
                            app:layout_constraintTop_toTopOf="@id/my_course_write_text_et"
                            app:layout_constraintBottom_toBottomOf="@id/my_course_write_text_et"
                            app:layout_constraintStart_toStartOf="parent"
                            app:tint="#848488" />

                        <TextView
                            android:id="@+id/my_course_write_text_et"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="장소 검색"
                            android:textColor="#848488"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="7dp"
                            android:background="@android:color/transparent"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_regular"
                            app:layout_constraintStart_toEndOf="@id/my_course_write_search_iv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/my_course_write_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="소요 시간"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:layout_marginTop="23dp"
                    android:drawableTint="#999999"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_search_bar"
                    app:layout_constraintStart_toStartOf="parent" />

                <View
                    android:id="@+id/my_course_write_time_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="#D3D4D5"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_time_tv" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/my_course_write_location_image_cv"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="28dp"
                    app:strokeColor="#D3D4D5"
                    app:strokeWidth="1dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_time_line"
                    app:layout_constraintStart_toStartOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/my_course_write_location_image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/my_course_write_location_image_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="사진 추가"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            android:fontFamily="@font/pretendard_regular"
                            app:layout_constraintVertical_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/my_course_write_location_image_add_iv" />

                        <ImageView
                            android:id="@+id/my_course_write_location_image_add_iv"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_add"
                            android:layout_marginTop="4dp"
                            app:layout_constraintTop_toBottomOf="@id/my_course_write_location_image_tv"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toTopOf="@id/my_course_write_location_image_number_tv" />

                        <TextView
                            android:id="@+id/my_course_write_location_image_number_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0/4"
                            android:textColor="@color/black"
                            android:textSize="11sp"
                            android:fontFamily="@font/pretendard_regular"
                            android:layout_marginTop="6dp"
                            app:layout_constraintTop_toBottomOf="@id/my_course_write_location_image_add_iv"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/my_course_write_location_add_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    app:strokeColor="#D3D4D5"
                    app:strokeWidth="1dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:layout_constraintTop_toBottomOf="@id/my_course_write_location_image_cv"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/my_course_write_location_add_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장소 추가하기 +"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:fontFamily="@font/pretendard_regular"
                        android:layout_gravity="center"
                        android:layout_marginVertical="13dp"/>

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/my_course_write_upload_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/default_button_x"
                android:text="코스 업로드"
                android:fontFamily="@font/button"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_marginTop="60dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/my_course_write_location_layout"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>