<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/follow_user_top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/follow_user_back_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_left"
            android:padding="10dp"
            android:layout_marginStart="14dp"
            app:tint="#404040"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/item_follow_user_profile_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_profile"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/follow_user_top_bar" />

    <TextView
        android:id="@+id/item_follow_user_nickname_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="@id/item_follow_user_profile_iv"
        app:layout_constraintBottom_toTopOf="@id/item_follow_user_info_layout"
        app:layout_constraintStart_toEndOf="@id/item_follow_user_profile_iv" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_follow_user_info_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_follow_user_nickname_tv"
        app:layout_constraintStart_toStartOf="@id/item_follow_user_nickname_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_follow_user_profile_iv">

        <TextView
            android:id="@+id/item_follow_user_follower_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로워 00"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/item_follow_user_line_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginStart="7dp"
            app:layout_constraintStart_toEndOf="@id/item_follow_user_follower_tv"
            app:layout_constraintTop_toTopOf="@id/item_follow_user_follower_tv"
            app:layout_constraintBottom_toBottomOf="@id/item_follow_user_follower_tv" />

        <TextView
            android:id="@+id/item_follow_user_following_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="팔로잉 00"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/item_follow_user_line_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/item_follow_follow_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_follow"
        android:text="팔로우"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:fontFamily="@font/pretendard_regular"
        android:paddingVertical="4dp"
        android:paddingHorizontal="15dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_follow_user_profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_follow_user_profile_iv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/item_follow_following_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_following"
        android:text="팔로잉"
        android:textSize="12sp"
        android:textColor="@color/main"
        android:fontFamily="@font/pretendard_regular"
        android:paddingVertical="4dp"
        android:paddingHorizontal="15dp"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:visibility="gone"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/item_follow_user_profile_iv"
        app:layout_constraintBottom_toBottomOf="@id/item_follow_user_profile_iv" />

    <TextView
        android:id="@+id/follower_user_info_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="친구와 여기저기 다니는걸 좋아하는 24살입니다 :) 액티비티랑 맛집 탐방을 주로 다녀요."
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_regular"
        android:lineHeight="19.6dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/item_follow_user_profile_iv"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/follow_user_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#EDEDED"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/follower_user_info_tv" />

    <TextView
        android:id="@+id/follow_user_popular_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임의 인기 코스"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/follow_user_line"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- MEMO: 수정 필요 -->
    <ImageView
        android:id="@+id/follow_user_popular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/test_img"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/follow_user_popular_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/follow_user_recent_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="닉네임의 인기 코스"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="36dp"
        app:layout_constraintTop_toBottomOf="@id/follow_user_popular"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- MEMO: 수정 필요 -->
    <ImageView
        android:id="@+id/follow_user_recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/test_img"
        android:layout_marginTop="12dp"
        android:paddingHorizontal="16dp"
        android:scaleType="fitXY"
        app:layout_constraintTop_toBottomOf="@id/follow_user_recent_tv"
        app:layout_constraintStart_toStartOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>