<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_scrap_folder_add_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/card_scrap_folder_add"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/item_scrap_folder_add_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="폴더 추가"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/item_scrap_folder_add_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_scrap_folder_add"
            app:layout_constraintTop_toBottomOf="@id/item_scrap_folder_add_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/item_scrap_folder_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="기본 폴더"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/item_scrap_folder_add_layout"
        app:layout_constraintStart_toStartOf="@id/item_scrap_folder_add_layout"
        app:layout_constraintEnd_toEndOf="@id/item_scrap_folder_add_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>