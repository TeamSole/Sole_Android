<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_course_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/my_course_logo_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="나의 기록"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/pretendard_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_course_tool_bar"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/my_course_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="20dp"
                android:paddingHorizontal="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/my_course_profile_iv"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@drawable/ic_profile"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/my_course_nickname_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="닉네임님의 발자국"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:fontFamily="@font/pretendard_semibold"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/my_course_profile_iv"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/my_course_info_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="지금까지 00 일간 00 곳의 장소를 방문하며,\n번달 총 00 개의 코스를 기록했어요"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:lineHeight="22dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/my_course_nickname_tv"
                    app:layout_constraintStart_toStartOf="@id/my_course_nickname_tv" />

                <TextView
                    android:id="@+id/my_course_info_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가장 많이 방문한 지역은 지역명이고\n👟 걸어서 🚌 대중교통으로 이동해서\n☕ 카페 🖼️ 문화·예술 🍚 맛집 을 다녔어요."
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/pretendard_regular"
                    android:layout_marginTop="16dp"
                    android:lineHeight="19.6dp"
                    app:layout_constraintTop_toBottomOf="@id/my_course_info_content"
                    app:layout_constraintStart_toStartOf="@id/my_course_nickname_tv" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/my_course_line"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="#EDEDED"
                app:layout_constraintTop_toBottomOf="@id/my_course_info_layout"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/my_course_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기록한 코스"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                android:layout_marginTop="20dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/my_course_line"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/my_course_location_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="#D3D4D5"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/my_course_course_title"
                app:layout_constraintStart_toStartOf="@id/my_course_course_title">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/my_course_condition_1_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="장소"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/my_course_condition_1_iv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="4dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:tint="#D3D4D5"
                        app:layout_constraintStart_toEndOf="@id/my_course_condition_1_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/my_course_condition_1_tv"
                        app:layout_constraintBottom_toBottomOf="@id/my_course_condition_1_tv" />
                    
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/my_course_with_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#D3D4D5"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="@id/my_course_location_tag"
                app:layout_constraintBottom_toBottomOf="@id/my_course_location_tag"
                app:layout_constraintStart_toEndOf="@id/my_course_location_tag" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/my_course_condition_2_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="동행"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/my_course_condition_2_iv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="4dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:tint="#D3D4D5"
                        app:layout_constraintStart_toEndOf="@id/my_course_condition_2_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/my_course_condition_2_tv"
                        app:layout_constraintBottom_toBottomOf="@id/my_course_condition_2_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/my_course_transport_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                app:strokeWidth="1dp"
                app:strokeColor="#D3D4D5"
                app:cardCornerRadius="4dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="@id/my_course_location_tag"
                app:layout_constraintBottom_toBottomOf="@id/my_course_location_tag"
                app:layout_constraintStart_toEndOf="@id/my_course_with_tag" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/my_course_condition_3_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="교통"
                        android:textColor="@color/black"
                        android:textSize="12dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:layout_marginVertical="5dp"
                        android:layout_marginStart="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <ImageView
                        android:id="@+id/my_course_condition_3_iv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_arrow_down"
                        android:layout_marginEnd="12dp"
                        android:layout_marginStart="4dp"
                        app:layout_constraintDimensionRatio="1:1"
                        app:tint="#D3D4D5"
                        app:layout_constraintStart_toEndOf="@id/my_course_condition_3_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/my_course_condition_3_tv"
                        app:layout_constraintBottom_toBottomOf="@id/my_course_condition_3_tv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/my_course_course_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_my_course_course"
                app:layout_constraintTop_toBottomOf="@id/my_course_location_tag"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>