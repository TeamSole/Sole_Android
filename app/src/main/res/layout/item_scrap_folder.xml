<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/item_scarp_folder_iv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@drawable/test_img"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/item_scrap_folder_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="기본 폴더"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/item_scarp_folder_iv"
        app:layout_constraintStart_toStartOf="@id/item_scarp_folder_iv"
        app:layout_constraintEnd_toEndOf="@id/item_scarp_folder_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>