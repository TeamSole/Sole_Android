<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/my_course_write_location_image_cv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:strokeColor="#D3D4D5"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_course_write_location_image_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/my_course_write_location_image_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/test_img"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/my_course_write_location_image_x"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:src="@drawable/ic_img_x"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintTop_toTopOf="@id/my_course_write_location_image_iv"
                app:layout_constraintEnd_toEndOf="@id/my_course_write_location_image_iv" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>