<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:paddingTop="24dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bottom_sheet_my_course_tag">

    <TextView
        android:id="@+id/my_course_bottom_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="취향"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/pretendard_semibold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/my_course_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#EDEDED"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/my_course_bottom_title" />

    <TextView
        android:id="@+id/my_course_bottom_location_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="장소"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/my_course_bottom_line"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_course_location_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/my_course_bottom_location_title"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_course_bottom_location_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🍚  맛집"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:background="@drawable/tag_x"
            android:paddingVertical="7dp"
            android:paddingHorizontal="15dp"
            android:minWidth="0dp"
            android:maxHeight="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/my_course_bottom_with_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="동행"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/my_course_location_tag_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_course_with_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/my_course_bottom_with_title"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_course_bottom_location_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="🙋‍♀️  혼자서"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:background="@drawable/tag_x"
            android:paddingVertical="7dp"
            android:paddingHorizontal="15dp"
            android:minWidth="0dp"
            android:maxHeight="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/my_course_bottom_transport_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교통"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:fontFamily="@font/pretendard_semibold"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/my_course_with_tag_layout"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/my_course_transport_tag_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/my_course_bottom_transport_title"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/my_course_bottom_location_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👟️  걸어서"
            android:textSize="14sp"
            android:fontFamily="@font/pretendard_regular"
            android:background="@drawable/tag_x"
            android:paddingVertical="7dp"
            android:paddingHorizontal="15dp"
            android:minWidth="0dp"
            android:maxHeight="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/default_button_o"
        android:text="적용하기"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:fontFamily="@font/pretendard_regular"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toBottomOf="@id/my_course_transport_tag_layout" />

</androidx.constraintlayout.widget.ConstraintLayout>